<div class="btn-group">
  <button class="btn">Select a Movie</button>
  <button class="btn dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
		<% @movies.each do |m| %>
			<% unless m["locations"].nil? %>
				<% title = m["title"] %>
    		<li><%= link_to title, movies_path(tag: title) %></li>
			<% end %>
			<% end %>
  </ul>
</div>