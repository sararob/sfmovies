<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;libraries=geometry"></script>
<% unless params[:tag] %>
	<%= render 'selectmovie' %>
<% end %>

<% if params[:tag] %>
<div class="page">
	<section class="page-section hero-unit">
				<div class="page-content">
<div class="movie-info">
<header class="page-section-header"><h2><%= link_to params[:tag], @tomatolink, :target => "_blank" %></h2></header>
<br>
<p class="label">Set Locations:</p><br>
<% @movieselect.each do |m| %>
		<%= m["locations"] %>
		<br>
<% end %>
<br>
<p class="label">Actors:</p><br>
<% @info.each do |m| %>
		<%= m["actor_1"] %>
		<br>
		<%= m["actor_2"] %>
		<br>
		<%= m["actor_3"] %>
<% end %>
<br>


<% @info.each do |m| %>
		<% if m["fun_facts"] %>
		<p class="label">Fun Fact:</p><br>
		<%= m["fun_facts"] %>
		<br>
<% end %>
<% end %>
		</div>
	</section>
<div class="back-home"><button class="btn"><%= link_to "Back to Movies", movies_path %></button></div>
</div>
<% end %>
<br>
<br>

